---
import SubHBox from "./ui/SubHBox.astro";
const { subheading } = await Astro.props;
---

<div class="mt-8 w-full"></div>
<div
  class="min-h-56 w-11/12 max-w-6xl self-center bg-gradient-to-t from-violet-700 from-20% to-brandMain to-100% max-lg:w-full"
>
  <div
    class="relative m-0.75 flex flex-col items-center justify-evenly self-center bg-white px-6 pb-10 pt-12 lg:flex-row"
  >
    <SubHBox side="left">{subheading}</SubHBox>
    <slot />
  </div>
</div>
