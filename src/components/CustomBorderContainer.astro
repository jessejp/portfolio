---
import SubHBoxLeft from "./ui/SubHBoxLeft.astro";
const { subheading } = await Astro.props;
---

<div class="mt-8 w-full"></div>
<div
  class="self-center w-11/12 max-lg:w-full max-w-6xl min-h-56 bg-gradient-to-t from-violet-700 from-20% to-100% to-brandMain"
>
  <div
    class="flex m-0.75 relative px-6 pt-12 pb-10 bg-white items-center justify-evenly self-center flex-col lg:flex-row"
  >
    <SubHBoxLeft>{subheading}</SubHBoxLeft>
    <slot />
  </div>
</div>
