---
import ThumbnailFrame from "/thumbnail_frame.svg?raw";
const { frontmatter } = Astro.props;
---

<div
  class="flex gap-2 w-11/12 items-center justify-center flex-col md:flex-row"
>
  <div class="w-1/2 max-md:self-start max-md:w-full max-md:order-2">
    <h3 class="text-2xl font-semibold">{frontmatter.title}</h3>
    <slot />
    <div
      class="my-6 py-2 px-5 border-slate-900 bg-white border-2 w-fit hover:invert"
    >
      <a class="text-xl" href={frontmatter.href} target="_blank">Visit Page</a>
    </div>
    <div class="flex flex-wrap gap-3 mt-10 max-w-md">
      {
        !!frontmatter.stack &&
          frontmatter.stack.map((item) => (
            <span class="text-xl px-2 py-1 rounded bg-brandMain text-white">
              {item}
            </span>
          ))
      }
    </div>
  </div>
  <img
    class="w-1/2 max-w-sm border-black border-1 hover:border-brandMain hover:border-2 max-md:mt-6 max-md:self-start"
    src={frontmatter.thumbnail}
    alt={frontmatter.title}
  />
</div>
