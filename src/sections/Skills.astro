---
interface Skill {
  name: string;
  icon: string;
  invert?: boolean;
}

const skills = [
  { name: "Three.js", icon: "./assets/skills/threejs.svg", invert: true },
  { name: "CSS", icon: "./assets/skills/css.svg", invert: true },
  { name: "HTML", icon: "./assets/skills/html.svg", invert: true },
  { name: "Git", icon: "./assets/skills/git.svg", invert: true },
  { name: "Astro", icon: "./assets/skills/astro.svg" },
  { name: "JavaScript", icon: "./assets/skills/javascript.svg", invert: true },
  { name: "Tailwind CSS", icon: "./assets/skills/tailwindcss.svg", invert: true },
  { name: "Next.js", icon: "./assets/skills/nextjs.svg", invert: true },
  { name: "React", icon: "./assets/skills/react.svg", invert: true },
  { name: "TypeScript", icon: "./assets/skills/typescript.svg", invert: true },
];
---

<section class="flex flex-col items-center w-full pb-14 pt-7 gap-4 bg-black text-zinc-200">
  <h2 class="text-3xl">things I know</h2>
  <div
    class="flex flex-wrap-reverse w-5/6 gap-6 justify-center flex-row max-w-6xl"
  >
    {
      skills.map((skill) => (
        <div class="flex flex-col gap-2 items-center w-32">
          <div class="h-20 overflow-clip">
            <img
              class:list={["h-20", { invert: skill.invert }]}
              src={skill.icon}
            />
          </div>
          <span class="text-lg">{skill.name}</span>
        </div>
      ))
    }
  </div>
</section>
