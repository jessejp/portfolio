---
const skillsList = [
  "JavaScript",
  "TypeScript",
  "React",
  "Next.js",
  "Tailwind CSS",
  "Visual Studio",
  "CSS",
  "HTML",
  "Git",
  "Astro",
  "Wordpress",
  "CSS",
  "Wordpress",
];
---

<section
  class="flex flex-col items-center w-full py-14 bg-black text-zinc-200"
>
  <div
    class="flex flex-wrap-reverse w-5/6 gap-6 justify-center flex-row max-w-6xl"
  >
    {
      skillsList.map((skill) => (
        <div class="flex flex-col gap-2 items-center w-32">
          <img class="w-20" src="./favicon.svg" />
          <span class="text-lg">{skill}</span>
        </div>
      ))
    }
  </div>
</section>
