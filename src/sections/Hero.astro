---
import Canvas3D from "../components/Canvas3D/Canvas3D.jsx";
---

<div
  class="flex w-full items-center justify-start gap-8 max-sm:gap-2 max-sm:flex-col"
>
  <div class="w-1/2 h-full min-h-halfScreen">
    <Canvas3D client:load />
  </div>
  <div class="flex flex-col w-72">
    <h1 class="text-5xl">Jesse Pernil√§</h1>
    <div class="mt-6"></div>
    <p>is a web developer and a 3D enthusiast.</p>
    <div class="mt-6"></div>
    <button
      class="w-fit py-1 px-8 bg-yellow-300 text-black border-black text-lg font-medium hover:bg-yellow-200"
      data-connect-button
    >
      Connect
    </button>
  </div>

  <div class="mt-6"></div>
</div>
<script>
  const connectButton = document.querySelector("[data-connect-button]");

  const scrollToContact = () => {
    document.querySelector("#contact").scrollIntoView({
      behavior: "smooth",
    });
  };

  connectButton.addEventListener("click", scrollToContact);
</script>
