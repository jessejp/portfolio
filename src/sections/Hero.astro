---
import Canvas3D from "../components/Canvas3D/Canvas3D.jsx";
---

<div
  class="flex w-full relative items-center justify-start max-md:gap-2 max-md:flex-col"
>
  <div class="w-full h-96 min-h-halfScreen">
    <Canvas3D client:load />
  </div>
  <div
    class="w-fit absolute bg-gradient-to-t from-violet-700 from-20% to-100% to-brandMain right-4 xl:right-46 bottom-1/5 max-md:relative max-md:bottom-0 max-md:right-0 max-md:w-11/12"
  >
    <div
      class="absolute w-fit h-2 right-6 -top-1 font-brandFont text-2xl bg-white p-1"
    >
      <div
        class="relative z-20 py-2 px-6 -top-7 shadow-hard-right shadow-brandMain bg-white text-brandMain border-brandMain border-3"
      >
        Status: Open to work!
      </div>
    </div>
    <div
      class="flex flex-col bg-white m-0.75 md:py-5 md:pl-5 md:pr-16 max-md:p-5"
    >
      <span class="font-brandFont text-2xl">Hi! I'm</span>
      <h1 class="text-5xl max-md:text-3xl">
        JESSE PERNILÃ„, <br /><span>A FRONT-END DEVELOPER.</span>
      </h1>
      <div class="mt-4"></div>
      <p class="text-lg w-96 max-md:w-fit">
        I'm enthusiastic about building for the web and creating awesome user
        experiences ðŸ¤©
      </p>
      <div class="mt-4"></div>
      <button
        class="w-fit py-1 px-8 font-brandFont text-white border-brandMain bg-brandMain border-2 text-3xl font-medium animate-bgSlideLeftAlt hover:animate-bgSlideRightAlt bg-no-repeat bg-x--10rem bg-gradient-to-r from-white from-100% to-200%"
        data-connect-button
      >
        Connect
      </button>
    </div>
  </div>

  <div class="mt-4"></div>
</div>

<script>
  const connectButton = document.querySelector("[data-connect-button]");

  const scrollToContact = () => {
    document.querySelector("#CONNECT").scrollIntoView({
      behavior: "smooth",
    });
    document.querySelector("#CONTACT-EMAIL").classList.add("animate-highlight");
    setTimeout(() => {
      document
        .querySelector("#CONTACT-EMAIL")
        .classList.remove("animate-highlight");
    }, 2400);
  };

  connectButton.addEventListener("click", scrollToContact);
</script>
