---
const sections = ["HOME", "WORKS", "ABOUT JESSE", "CONTACT"];
---

<div class="h-28 max-sm:h-0"></div>
<nav class="flex justify-center w-full h-24 fixed max-sm:relative bg-white z-20">
  <div
    class="w-5/6 flex justify-between items-center max-sm:w-full max-sm:justify-evenly"
  >
    <img class="h-1/2 rounded-full" src="/matcap_256.png" />
    <div
      class="flex w-full justify-evenly list-none gap-4 font-brandFont text-3xl max-sm:hidden"
    >
      {sections.map((section) => <button>{section}</button>)}
    </div>
    <div class="hidden max-sm:flex justify-evenly list-none gap-4 font-brandFont text-3xl">
     jessep.fi
    </div>
  </div>
</nav>

<script define:vars={{ sections }}>
  const nav = document.querySelector("nav>div>div");

  nav.addEventListener("click", (event) => {
    const clicked = event.target.innerHTML;
    console.log(clicked, clicked.replace(" ", "-"));
    if (sections.includes(clicked)) {
      const section = document.querySelector(`#${clicked.replace(" ", "-")}`);
      section.scrollIntoView({ behavior: "smooth", block: "center" });
    }
  });
</script>
