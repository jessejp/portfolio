---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-zinc-900 text-xl leading-tight font-vt323">
    <slot />
    <footer class="flex justify-center items-center w-full h-24 bg-brandMain">
      <p>footer</p>
    </footer>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Rowdies:wght@300;400&display=swap");

  canvas {
    margin: 0;
    padding: 0;
    border-radius: 50%;
    width: 100%;
    height: 100%;
  }

  body {
    margin: 0;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "VT323", monospace;
  }
</style>
