---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="preload flex flex-col justify-center text-zinc-900 text-xl leading-tight font-vt323 w-full">
    <slot />
    <footer class="flex justify-center items-center w-full h-24 bg-brandMain">
    </footer>
  </body>
</html>
<style is:global>
  canvas {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }

  body {
    margin: 0;
    font-family: "Inter", sans-serif;
  }

  body.preload * {
    animation-duration: 0s !important;
    -webkit-animation-duration: 0s !important;
    transition: background-color 0s, opacity 0s, color 0s, width 0s, height 0s,
      padding 0s, margin 0s !important;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "VT323", monospace;
  }
</style>

<script>
  setTimeout(function () {
    document.body.className = "";
  }, 500);
</script>
