---
import { ViewTransitions } from "astro:transitions";

export interface Props {
  title: string;
}

const githubIcon = await import("/assets/icons/github.svg?raw");
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Jesse PernilÃ¤ - Frontend Developer Portfolio. Exploring web development with creativity and a passion for user experiences."
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="preload">
    <slot />
    <footer
      class="flex h-36 w-full items-center justify-center gap-6 text-center text-base max-sm:mt-20 max-sm:flex-col"
    >
      <p class="max-sm:w-11/12">
        Built with <a
          class="accessible"
          href="https://astro.build/"
          target="_blank">Astro</a
        > and <a
          class="accessible"
          href="https://tailwindcss.com/"
          target="_blank">Tailwind CSS</a
        >, deployed with <a
          class="accessible"
          href="https://vercel.com/"
          target="_blank">Vercel</a
        >
      </p>
      <div class="block max-sm:hidden">|</div>
      <div class="flex items-center gap-1">
        <svg
          viewBox="0 0 24 24"
          class="mr-1 h-full w-5 fill-inherit stroke-none"
          set:html={`
    <title>GitHub</title>
    ${githubIcon.default}
    `}
        /> jessejp /<a
          class="accessible"
          href="https://github.com/jessejp/portfolio"
          target="_blank">portfolio</a
        >
      </div>
    </footer>
    <style is:global>
      canvas {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
      }

      body {
        margin: 0;
        font-family: "Inter", sans-serif;
      }

      body.preload * {
        animation-duration: 0s !important;
        -webkit-animation-duration: 0s !important;
        transition:
          background-color 0s,
          opacity 0s,
          color 0s,
          width 0s,
          height 0s,
          padding 0s,
          margin 0s !important;
      }

      h1,
      h2,
      h3,
      h4 {
        font-family: "VT323", monospace;
      }
    </style>

    <script>
      setTimeout(function () {
        document.body.className = "";
      }, 500);
    </script>
  </body>
</html>
